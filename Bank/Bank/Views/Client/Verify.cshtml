@model ViewVerify
<link rel="stylesheet" href="~/css/Register.css" asp-append-version="true" />

<div class="container">
    <h2>Окончание регистрации</h2>

    <form asp-action="Verify" method="post" onsubmit="return validateCheckboxes()">

        <div class="form-group">
            <label asp-for="Verify">Введите код подтверждения отправленный вам на почту</label>
            <input asp-for="Verify" class="form-control" placeholder="0000" />
            <span asp-validation-for="Verify" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Зарегистрировать</button>
        </div>
    </form>
</div>
