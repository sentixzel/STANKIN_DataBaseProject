@model IEnumerable<Сотрудник>
@{
    ViewData["Title"] = "Сотрудники отделения";
}
<link rel="stylesheet" href="~/css/Emp.css" asp-append-version="true" />
<h1>Сотрудники отделения</h1>
<table class="table">
    <thead>
        <tr>
            <th>Фото</th>
            <th>Имя</th>
            <th>Фамилия</th>
            <th>Должность</th>
            <th>Номер телефона</th>
            <th>Электронная почта</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var сотрудник in Model)
        {
            <tr>
                <td><img src="@сотрудник.Photo" alt="Photo" class="employee-photo"></td>
                <td>@сотрудник.Имя</td>
                <td>@сотрудник.Фамилия</td>
                <td>@сотрудник.Должность</td>
                <td>@сотрудник.НомерТелефона</td>
                <td>@сотрудник.ЭлектроннаяПочта</td>
            </tr>
        }
    </tbody>
</table>