@model OpenСreditModel
@{
    ViewData["Title"] = "Взятие кредита";
}

<link rel="stylesheet" href="~/css/shet.css" />

<div class="form-container">
    <h2 class="form-title">Взятие кредита</h2>

    <form asp-action="OpenCredit" method="post">
        <input type="hidden" name="ID_Клиента" value="@Model.ID_Клиента" />

        <div class="form-group">
            <label>Тип кредита</label>
            <div>
                <input type="radio" id="typeCurrent" name="ТипКредита" value="Долгосрочный  5 лет 12%" class="radio-input" style="display: none;" checked />
                <label for="typeCurrent" class="radio-label">
                    <img src="/img/Credit/1.jpg" alt="Долгосрочный 5 года" />
                    <div class="overlay-text">Долгосрочный 5 года</div>
                </label>
            </div>
            <div>
                <input type="radio" id="typeSavings2" name="ТипКредита" value="Среднесрочный 3 года 16%" class="radio-input" style="display: none;" />
                <label for="typeSavings2" class="radio-label">
                    <img src="/img/Credit/2.jpg" alt="Среднесрочный 3 года" />
                    <div class="overlay-text">Среднесрочный 3 года</div>
                </label>
            </div>
            <div>
                <input type="radio" id="typeSavings3" name="ТипКредита" value="Краткосрочный 1 год 25%" class="radio-input" style="display: none;" />
                <label for="typeSavings3" class="radio-label">
                    <img src="/img/Credit/3.jpg" alt="Краткосрочный 1 год" />
                    <div class="overlay-text">Краткосрочный 1 год</div>
                </label>
            </div>
        </div>
       
        <div class="form-group">
            <label>Сумма кредита</label>
 
            
            <div>
                <input type="radio" id="balance5000" name="СуммаКредита" value="5000" class="radio-input" style="display: none;" />
                <label for="balance5000" class="radio-label">
                    <img src="/img/Shet/balance/5000.jpg" alt="5000" />
                    <div class="overlay-text">5000</div>
                </label>
            </div>
            <div>
                <input type="radio" id="balance10000" name="СуммаКредита" value="10000" class="radio-input" style="display: none;" />
                <label for="balance10000" class="radio-label">
                    <img src="/img/Shet/balance/10000.jpg" alt="10 000" />
                    <div class="overlay-text">10 000</div>
                </label>
            </div>
            <div>
                <input type="radio" id="balance100000" name="СуммаКредита" value="100000" class="radio-input" style="display: none;" />
                <label for="balance100000" class="radio-label">
                    <img src="/img/Shet/balance/100000.jpg" alt="100 000" />
                    <div class="overlay-text">100 000</div>
                </label>
            </div>
        </div>

        <button type="submit" class="submit-button">Взять</button>
    </form>
</div>