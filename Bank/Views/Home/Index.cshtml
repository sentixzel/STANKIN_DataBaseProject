<h2>Clients</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Имя)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Фамилия)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Отчество)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ДатаРождения)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Имя)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Фамилия)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Отчество)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ДатаРождения)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.КлиентID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.КлиентID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.КлиентID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
